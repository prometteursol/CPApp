<?xml version="1.0" encoding="utf-8"?>
<com.prometteur.cpapp.utils.HeaderView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <!-- Title -->
        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:id="@+id/header_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text=""
            />

        <!-- Subtitle -->
        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:id="@+id/header_view_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:text=""
            android:layout_weight="1"
            android:layout_marginTop="-5dp"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:drawablePadding="@dimen/_2sdp"
            />
    <RelativeLayout
        android:id="@+id/rlRatingSection"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:layout_gravity="bottom"
            android:progressTint="@color/yellow"
            style="@style/Widget.AppCompat.RatingBar.Small"
            />
        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:id="@+id/tvReviewCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:text="(0 Reviews)"
            android:layout_toRightOf="@+id/ratingBar"
            android:gravity="center"
            />
    </RelativeLayout>
    </LinearLayout>

    <com.prometteur.cpapp.utils.TextViewCustomFont
        android:id="@+id/tvHeaderViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@drawable/status_rounded_green_background"
        android:textSize="12sp"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingTop="@dimen/_2sdp"
        android:text="OPEN"
        />

    </com.prometteur.cpapp.utils.HeaderView>
