<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:background="@drawable/row_rounded_background_white"
    >
    <LinearLayout
        android:id="@+id/linStartView"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@drawable/row_side_rounded_background_blue"
        android:orientation="vertical"
        android:padding="5dp"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal"
        android:visibility="visible">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linStartView"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:padding="5dp">


            <com.prometteur.cpapp.utils.TextViewCustomFont
                android:id="@+id/tvServiceName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="-1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />
            <com.prometteur.cpapp.utils.TextViewCustomFont
                android:id="@+id/tvServiceOneBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.6"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="12dp"
                android:text=""
                android:textColor="@color/grey"/>
            <com.prometteur.cpapp.utils.TextViewCustomFont
                android:id="@+id/tvServiceSecondBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.6"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="12dp"
                android:text=""
                android:textColor="@color/grey"/>
        </LinearLayout>

        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:textColor="@color/black"
            android:background="@color/grey"
            android:layout_marginRight="@dimen/_2sdp"
            android:visibility="invisible"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/_2sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/row_rounded_background_bluish"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:gravity="center_vertical"
                >
            <com.prometteur.cpapp.utils.TextViewCustomFont
                android:id="@+id/tvOfferPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14dp" />
            <com.prometteur.cpapp.utils.TextViewCustomFont
                android:id="@+id/tvMainPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/grey"
                android:textSize="12dp" />
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>
        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:background="@color/grey"
            android:layout_marginRight="@dimen/_2sdp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        android:gravity="center_vertical"
        >
        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Start Date : "
            android:textColor="@color/skyBlueDark"
            android:textSize="12dp"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />
        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:id="@+id/tvStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_weight="1"
            />
        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:textColor="@color/black"
            android:background="@color/grey"
            android:layout_marginRight="@dimen/_2sdp"
            />
        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="End Date : "
            android:textColor="@color/skyBlueDark"
            android:textSize="12dp"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />
        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:id="@+id/tvEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
</LinearLayout>