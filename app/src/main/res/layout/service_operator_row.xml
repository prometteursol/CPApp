<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.prometteur.cpapp.utils.TextViewCustomFont
        android:id="@+id/tvServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:drawableLeft="@drawable/ic_tick_service"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableTint="@color/darkGray"
        android:gravity="center"
        android:padding="2dp"
        android:text="Service"
        android:textColor="@color/black"
         />

    <LinearLayout
        android:id="@+id/linBrands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="2dp">

        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="Brands : "
            android:textColor="@color/grey"/>

        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:id="@+id/tvBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="brand1"
            android:textColor="@color/gray"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="2dp">

        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="Operator : "
            android:textColor="@color/skyBlueDark"
             />

        <com.prometteur.cpapp.utils.TextViewCustomFont
            android:id="@+id/tvOpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="Ben John"
            android:textColor="@color/skyBlueDark"
            android:textStyle="bold"/>
    </LinearLayout>
    <com.prometteur.cpapp.utils.TextViewCustomFont
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center"
        android:padding="2dp"
        android:background="@color/lightGray" />
</LinearLayout>

