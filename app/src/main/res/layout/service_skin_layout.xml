<LinearLayout android:id="@+id/listSurQue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        >
        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/cbIsSkinCheck"
            style="@style/MyTexViewStyleService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/darker_gray"
            />
        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/cbIsSkin"
            style="@style/MyTexViewStyleService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/darker_gray"
            android:text="Skin"
            android:button="@null"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linSkinBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
    <com.prometteur.cpapp.utils.CustomeEditText
        android:id="@+id/edtNoOfOptSkin"
        style="@style/MyEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:hint="@string/no_of_operators"
        android:paddingLeft="15dp"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.prometteur.cpapp.utils.TextViewCustomFont
        style="@style/MyTexViewStyleQue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Brand Used"
        android:paddingLeft="15dp"
        android:textColor="@android:color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lotus"

            />

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="O3+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nature's Essence" />

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cheryl" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rahul Phate" />

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VLCC" />
    </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dermalogica" />

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Raaga" />
    </LinearLayout>
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Christine valmy" />

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Biotique" />
    </LinearLayout>
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jovees" />

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Plum" />
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Richfeel" />

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kayakalp" />
    </LinearLayout>

   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <com.prometteur.cpapp.utils.CheckBoxCustomFont
            android:id="@+id/skinBrand15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Other" />
    </LinearLayout>
        </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
    <com.prometteur.cpapp.utils.CustomeEditText
        android:id="@+id/edtSkinOtherBrand"
        style="@style/MyEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:hint="@string/other_brands_example_brand1_brand2"
        android:paddingLeft="15dp"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:singleLine="true"
        />
    </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</LinearLayout>